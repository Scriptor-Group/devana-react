{
  "include": [
    "src",
    "./styles.d.ts"
  ], /* Include only the src directory */
  "exclude": [
    "**/*.stories.ts",
    "**/*.test.tsx",
    "**/*.test.ts",
    "node_modules",
    "dist"
  ], /* Exclude all test files and node_modules */
  "compilerOptions": {
    "rootDir": "src",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "module": "esnext",
    "noEmit": false,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.css$"
        }
      }
    ]
  }
}